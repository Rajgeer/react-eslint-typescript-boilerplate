{
  "name": "react-linting-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": "false",
  "jest": {
    "verbose": true
  },
  "scripts": {
    "lint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "fix": "prettier-eslint --write \"src/**/*.+(js|jsx|ts|tsx|json)\"",
    "check-types": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky install",
    "test": "jest",
    "prepush": "npm-run-all --parallel check-types lint test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "prettier-eslint-cli": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js, json, jsx}": "eslint --cache --fix",
    "*.{ts, tsx}": [
      "eslint --cache --fix",
      "tsc --noEmit --jsx react --skipLibCheck --esModuleInterop"
    ]
  }
}
